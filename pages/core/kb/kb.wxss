/**kb.wxss**/
.container{

}
.blur-area{
    position: relative;
    display: flex;
    transition: filter .3s;
}
.blur{
    filter: blur(3px);    
}
.kb-title{
    position: relative;
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    top: 0;
    background: #fff;
    overflow: hidden;
    text-align: center;
    z-index: 999;
}
.kb-ctn{
    position: absolute;
    width: 100%;
    height: 1276rpx;
    z-index: 0;
}
.kb-num-ctn{
    position: relative;
    z-index: 200;
    width: 30rpx;
    height: 1276rpx;
    text-align: center;
    background: #fff;
}
.kb-num-ctn view{
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
}
.mg-4-t{
    margin-top: 40rpx;
}
.mg-4{
    margin-bottom: 4rpx;
}
.mg-12{
    margin-bottom: 12rpx;
}

.kb-cards-scroll{
    position: absolute;
    top: 0;
    left: 30rpx;
    width: 924rpx;
    height: 1276rpx;
    display: fixed;
    flex-flow: row nowrap;
    overflow: scroll;
    z-index: 0;
}
.kb-cards-column{
    display: inline-block;
    width: 120rpx;
    height: 1276rpx;
    background: #fff;
    overflow: hidden;
    margin-right: 12rpx;
    z-index: 99;
}

.kb-card{
    position: relative;
    width: 120rpx;
    height: 200rpx;
    overflow: hidden;
    box-sizing: border-box;
    border-radius: 5rpx;
    z-index: 100;
    color: #fff;
}

.kb-card-content{
    background: #eee;
    width: 120rpx;
    height: 200rpx;
    padding: 0 12rpx;
    text-align: center;
    box-sizing: border-box;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
}
.kb-card-place-num{
    font-size: 13pt;
    padding: 17rpx 0;
}
.kb-card-place-words{
    font-size: 9pt;
    padding: 17rpx 0;
    line-height: 100%;    
}
.kb-card-name{
    font-size: 10pt;
    padding-bottom: 4rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    line-height: 130%;
}
.kb-bg{
    position: absolute;
    width: 120rpx;
    height: 1276rpx;
    background: -webkit-gradient(linear, left top, left bottom, from(#deefff), color-stop(0.5, #abd2f6), to(#deefff));
    z-index: 1;
}
.k-sec{
    position: absolute;
    /*margin-top: 104rpx;*/
    top: 0;
    z-index: 999;
}
.k-sec::before{
    content: '';
    position: absolute;
    display: inline-block;
    margin: 4rpx 90rpx;
    width: 12rpx;
    height: 6rpx;
    border-radius: 2rpx;
    background: #fff;
}
.green{
    background: #7acfa6;
}
.blue{
    background: #73b4ef;
}
.purple{
    background: #9f8bea;
}
.red{
    background: #e286ab;
}
.yellow{
    background: #ffcb63;
}


.kb-info-ctn{
    position: fixed;
    width: 100%;
    height: 100rpx;
    left: 0;
    bottom: 0;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    background: #56a5ee;
    z-index: 1000;
}
.kb-info-title{
    color: #fff;
    padding: 0 55rpx;
    display: flex;
}
.kb-info-week{
    line-height: 100rpx;
}
.kb-swipers{
    position: absolute;
    right: 72rpx;
    width: 360rpx;
}
.kb-week-swiper{
    display: inline-block;
    width: 360rpx;
    height: 100rpx;
    line-height: 100rpx;
    
}
.kb-week-swiper-item{
    width: 360rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    
}
.kb-swiper-mask-left{
    position: absolute;
    z-index: 999;
    right: 390rpx;
    width: 60rpx;
    height: 100rpx;
    background: -webkit-gradient(linear, left top, right top, from(rgba(86,165,238,0.7)), to(rgba(86,165,238,0)));    
}
.kb-swiper-mask-right{
    position: absolute;
    z-index: 999;
    right: 72rpx;
    width: 90rpx;
    height: 100rpx;
    background: -webkit-gradient(linear, left top, right top, from(rgba(86,165,238,0)), to(rgba(86,165,238,0.7)));    
}

.kb-detail{
    display: none;
    position: fixed;
    top:0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(125,125,125,.3);
    z-index: 300;

}
.detail{
    display: block;
}
.kb-detail-card{
    float: right;
    margin-left: -110rpx;
    box-shadow: 0 0 10px 1px #999;
}
.kb-detaile-card-ctn{
    position: absolute;
    width: 140rpx;
}