/**ykt.wxss**/
.container {
    background-color: #fff;
    padding: 30rpx;
}

/* 今日余额 */
.ykt-card {
    display: flex;
    flex-direction: column;
    height: 350rpx;
    margin: 15rpx 25rpx 50rpx;
    background: #ffcb63;
    border-radius: 15rpx;
    box-shadow: 5rpx 5rpx 15rpx #ccc;
}
.ykt-black-line {
    width: 100%;
    height: 80rpx;
    margin: 45rpx 0 10rpx;
    background: #777;
}
.ykt-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.ykt-ye {
    display: flex;
    flex-direction: column;
}
.ykt-ye-name {
    font-size: 25rpx;
    line-height: 50rpx;
    padding-left: 29rpx;
}
.ykt-ye-money {
    font-size: 28rpx;
    padding-left: 86rpx;
}
.ykt-ye-money text {
    font-size: 72rpx;
    line-height: 110rpx;
    padding-right: 26rpx;
}
.ykt-img {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200rpx;
}
.ykt-img image {
    width: 200rpx;
    height: 200rpx;
}


/* 详情盒子 */
.ykt-detail-wraper {
    display: flex;
    flex-direction: column;
    margin: 52rpx 26rpx 0;
    border: 2px solid #FAD864;
    border-radius: 4px;
}
.ykt-detail {
    display: flex;
    flex-direction: column;   
    padding: 0 10rpx;
    overflow: hidden;
    max-height: 1000rpx;
    transition: max-height 0.2s ease-in-out;
}
.ykt-detail text {
    font-size: 25rpx;
}
.ykt-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 37rpx 27rpx;
    background: #FAD864;
}
.ykt-type-name {
    font-size: 28rpx;
    color: #fff;
}
.ykt-detail-show {
    max-height: 0;  
}
.detail-list {
    display: flex;
    flex-direction: column;
    line-height: 74rpx;
    border-bottom: 1px solid #d4d4d4;
}
.detail-list:last-child {
    border: none;
}
.ykt-icon{
    width: 35rpx;
    height: 20rpx;  
    transition: transform .2s;
    transform: rotate(180deg);
}
.ykt-head-show .ykt-icon{
    transform: rotate(0deg);
}

/* canvas */
.grid-wraper {
    position: relative;
    overflow: hidden;
}
#ykt-canvas {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 310px;
}
.line {
    position: absolute;
    bottom: 19rpx;    
    z-index: 999;
    height: 285px;
    width: 4rpx;
    background: red;
}