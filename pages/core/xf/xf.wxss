/**xf.wxss**/
.container {
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: #f7f7f7;
    font-family: "微软雅黑";
}

/** 学费title **/
.xf-title-wraper {
    display: flex;
    justify-content: space-between;
    padding-top: 40rpx;
}
.xf-title-info {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 40rpx;
}
.xf-stu-info {
    display: flex;
    flex-direction: column;
}
.xf-stu-info text {
    line-height: 45rpx; 
}
.xf-title {
    font-size: 44rpx;
    font-weight: 500;
    color: #000;
}
.xf-title-icon {
     display: block;
     width: 200rpx;
     height: 200rpx;
}

/** 学费类型 **/
.xf-types {
    display: flex;
    flex-direction: column;
    margin-top: 72rpx;
}
.xf-type-item {
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
    margin-bottom: 14.6rpx;
    background-color: #ffffff;
    border-radius: 4px;
}
.xf-type-item text {    
    font-size: 30rpx;
    color: #000;
}
.xf-type-name {
    line-height: 147rpx;
}
.xf-type-detail {
    display: flex;
    flex-direction: column;
}
.xf-type-detail text {
    line-height: 74rpx;
    border-bottom: 1px solid #d4d4d4;
}