/**xf.wxss**/
.container {
    padding-left: 30rpx;
    padding-right: 30rpx;
    background-color: #f7f7f7;
}

/** 学费title **/
.xf-title-wraper {
    display: flex;
    justify-content: space-between;
    padding-top: 40rpx;
}
.xf-title-info {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding-left: 40rpx;
}
.xf-stu-info {
    display: flex;
    flex-direction: column;
}
.xf-stu-info text {
    font-size: 28rpx;
    line-height: 45rpx; 
}
.xf-title {
    font-size: 44rpx;
    font-weight: 600;
    color: #000;
}
.xf-title-icon {
     display: block;
     width: 200rpx;
     height: 200rpx;
}

/** 学费类型 **/
.xf-types {
    display: flex;
    flex-direction: column;
    margin-top: 72rpx;
}
.xf-type-item {
    display: flex;
    flex-direction: column;
    padding: 0 40rpx;
    margin-bottom: 14.6rpx;
    background-color: #ffffff;
    border-radius: 4px;
    transition: height 0.5s ease-in-out;
}
.xf-type-item text {    
    font-size: 30rpx;
    color: #000;
}
.xf-head {
    display: flex;
    justify-content: space-between;
    padding: 50rpx 0;
}

.xf-detail {
    display: flex;
    flex-direction: column;   
    overflow: hidden;
    max-height: 0;
    transition: max-height 0.2s ease-in-out;
}
.xf-detail-show {
    max-height: 1000rpx;  
}
.xf-detail text {
    line-height: 74rpx;
    border-bottom: 1px solid #d4d4d4;
}

/**列表展开的icon旋转 **/
.xf-item-icon{
    width: 35rpx;
    height: 20rpx;  
    transition: transform .2s;
    transform: rotate(0deg);
}
.xf-head-show .xf-item-icon{
    transform: rotate(180deg);
}

/**列表展开时标题的颜色变化 **/
.xf-type-name {
    transition: color ease-out .2s;
}
.xf-head-show .xf-type-name {
    transition: color ease-out .2s;
    color: #c8c8c8;
}



